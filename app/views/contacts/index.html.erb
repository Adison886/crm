<% content_for :title, "Listing Contacts" %>
<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>
<%= render 'search_form_for' %>





<table class="table table-hover">
  <thead>
    <tr>
       <%= content_tag :th, sort_link(@q, :first_name) %>
      <%= content_tag :th, sort_link(@q, :last_name) %>
      <th>First name cn</th>
      <th>Last name cn</th>
     <%= content_tag :th, sort_link(@q, :gender) %>
      <%= content_tag :th, sort_link(@q, :email) %>
      <th>Phone</th>
      <th>Website</th>
      <th>Company</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.first_name_cn %></td>
        <td><%= contact.last_name_cn %></td>
        <td><%= contact.gender %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.website %></td>
        <td><%= contact.company_id %></td>
        <td><%= contact.remark %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path , class: "btn btn-default" %>
