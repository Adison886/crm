<% content_for :title, "Show Company" %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Full name:</strong>
  <%= @company.full_name %>
</p>

<p>
  <strong>Short name:</strong>
  <%= @company.short_name %>
</p>

<p>
  <strong>Contact phone:</strong>
  <%= @company.contact_phone %>
</p>

<p>
  <strong>Website:</strong>
  <%= @company.website %>
</p>
<h2>Contacts</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>First name </th>
      <th>Last name</th>
      <th>First name cn</th>
      <th>Last name cn</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Website</th>
      <th>Company</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.first_name_cn %></td>
        <td><%= contact.last_name_cn %></td>
        <td><%= contact.gender %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.website %></td>
        <td><%= contact.company_id %></td>
        <td><%= contact.remark %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Contact', new_contact_path , class: "btn btn-default" %><br/>
<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', companies_path %>
